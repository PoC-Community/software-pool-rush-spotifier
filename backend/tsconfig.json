{
    "compilerOptions": {
      "target": "ES2022",
      "module": "commonjs",
      "sourceMap": true,
      "outDir": "./dist",
      "strict": true,
      "allowUnreachableCode": false,
  
      "baseUrl": "./src",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
    },
  
    "include": [
      "src/**/*.ts",
      "tests/**/*.ts",
      "src/*.ts"
    ],
    "exclude": [
      "node_modules",
    ]
}